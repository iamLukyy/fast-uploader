# Required: Session encryption key (min 32 characters)
# Generate with: openssl rand -base64 32
NUXT_SESSION_SECRET=

# Required: Authentication password
NUXT_AUTH_PASSWORD=

# Required for docker-compose: Domain for Traefik
DOMAIN=upload.localhost

# Optional: Public base URL for file links (e.g. https://upload.example.com)
NUXT_PUBLIC_BASE_URL=

# Optional: Data directory (default: ./data locally, /data in Docker)
NUXT_DATA_DIR=./data
